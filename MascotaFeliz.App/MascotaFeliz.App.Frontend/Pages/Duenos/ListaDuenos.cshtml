@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}

<h1 style="margin-top: 40px"></h1>
<hr>
<h1 class="display-4">Listado de Propietarios</h1>
<hr>
<br>
<table class="table">
    @foreach (var dueno in Model.listaDuenos)
    {
        <tr>

            <td>@dueno.Id</td>
            <td>@dueno.Nombres</td>
            <td>@dueno.Apellidos</td>
            <td>@dueno.Direccion</td>
            <td>@dueno.Telefono</td>
            <td>@dueno.Correo</td>

        <td>
                <a class="btn btn-primary table-btn" style="background-color: coral;" asp-page ="./DetallesDuenos" asp-route-duenoId="@dueno.Id">
                    Detalle Dueño
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" style="background-color: coral;" asp-page="./EditarDuenos" asp-route-duenoId="@dueno.Id">
                    Editar Dueño
                </a>
            </td>
        </tr>
        
    }
</table>


<a class = "btn btn-primary table-btn" style="background-color: brown; margin-left: 20px;" asp-page="./EditarDuenos" class="btn-default">Adicionar Dueño</a> 
