@page
@model MascotaFeliz.App.Frontend.Pages.ListaVeterinariosModel
@{
}

<h1 style="margin-top: 40px"></h1>
<hr>
<h1 class="display-4">Listado de Veterinarios</h1>
<hr>
<br>
<table class="table">
    @foreach (var veterinario in Model.listaVeterinarios)
    {
        <tr>

            <td>@veterinario.Id</td>
            <td>@veterinario.Nombres</td>
            <td>@veterinario.Apellidos</td>
            <td>@veterinario.Direccion</td>
            <td>@veterinario.Telefono</td>
            <td>@veterinario.TarjetaProfesional</td>

        <td>
                <a class="btn btn-primary table-btn" style="background-color: coral;" asp-page ="./DetallesVeterinarios" asp-route-veterinarioId="@veterinario.Id">
                    Detalle Veterinario
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" style="background-color: coral;" asp-page="./EditarVeterinarios" asp-route-veterinarioId="@veterinario.Id">
                    Editar Veterinario
                </a>
            </td>
        </tr>
        
    }
</table>


<a class = "btn btn-primary table-btn" style="background-color: brown; margin-left: 20px;" asp-page="./EditarVeterinarios" class="btn-default">Adicionar Veterinario</a>